{
  "name": "golden-errands-platform",
  "version": "2.0.0",
  "description": "Golden Errands Delivery Management Platform - Full Stack Application",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "setup": "powershell -ExecutionPolicy Bypass -File setup-dev.ps1",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install", 
    "install:all": "npm run install:backend && npm run install:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:backend",
    "start:backend": "cd backend && npx prisma migrate deploy && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "start": "npm run start:backend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm run dev:backend",
    "postinstall": "npm run install:backend"
  },
  "keywords": [
    "delivery",
    "logistics",
    "management",
    "nodejs",
    "react",
    "typescript"
  ],
  "license": "MIT"
}