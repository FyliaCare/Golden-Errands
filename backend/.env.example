# Golden Errands - Environment Configuration Template
NODE_ENV=production
PORT=4000

# Database URL (Required) - Platform will auto-provide or set your own
DATABASE_URL="postgresql://user:password@hostname:5432/database"

# JWT Secrets (Required) - Generate secure secrets for production
JWT_ACCESS_SECRET=your_secure_access_secret_32_characters_minimum
JWT_REFRESH_SECRET=your_secure_refresh_secret_32_characters_minimum
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# External APIs (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Payment Gateways (Optional)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Application Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Company Information
COMPANY_NAME=Golden Errands
COMPANY_EMAIL=info@goldenerrands.com
COMPANY_PHONE=0256039212
